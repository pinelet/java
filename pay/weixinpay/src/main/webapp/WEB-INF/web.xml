<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<display-name>PENGDA weixin Pay Web Application</display-name>
	<context-param>
		<description>公众号ID</description>
		<param-name>pay.wx.appid</param-name>
		<param-value>wxc8b83c4a74cbee09</param-value>
	</context-param>
	<context-param>
		<param-name>pay.wx.appsecret</param-name>
		<param-value>f3343c80a9a324b80976b4f0979b1f68</param-value>
	</context-param>
	<context-param>
		<param-name>pay.wx.spikey</param-name>
		<param-value>q1ChOpOYyJYcbpE2X10LFF19dlt8V75c</param-value>
	</context-param>
	<listener>
		<listener-class>com.pinelet.weixinpay.servlet.PayContextListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>QRCodeService</servlet-name>
		<servlet-class>com.pinelet.weixinpay.servlet.QRCodeServlet</servlet-class>
		<init-param>
			<param-name>width</param-name>
			<param-value>300</param-value>
		</init-param>
		<init-param>
			<param-name>height</param-name>
			<param-value>300</param-value>
		</init-param>
		<init-param>
			<description>M, L, H, Q</description>
			<param-name>level</param-name>
			<param-value>0</param-value>
		</init-param>
		<init-param>
			<param-name>urlprefix</param-name>
			<!--param-value>http://192.168.0.107:9090/pay/main?t=g</param-value-->
			<param-value>http://www.ssjcx.com/pay/main?t=g</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>javax.ws.rs.core.Application</servlet-name>
	</servlet>

	<servlet>
		<servlet-name>MainService</servlet-name>
		<servlet-class>com.pinelet.weixinpay.servlet.MainService</servlet-class>
		<async-supported>true</async-supported>
	</servlet>
	<servlet>
		<servlet-name>VaildService</servlet-name>
		<servlet-class>com.pinelet.weixinpay.servlet.VaildService</servlet-class>
		<init-param>
			<param-name>token</param-name>
			<param-value>7OEsWTwEY6aIJS3A7gcsqMyuY2myL1Mk</param-value>
		</init-param>
		<init-param>
		<description>not be used now</description>
		<param-name>aeskey</param-name>
		<param-value>a6NceNPlRt7dd8Gn0322TEvtn2wKUCBeN8bWPnV5bOE</param-value>
		</init-param>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>javax.ws.rs.core.Application</servlet-name>
		<url-pattern>/gate/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MainService</servlet-name>
		<url-pattern>/main</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>VaildService</servlet-name>
		<url-pattern>/wx/vaild</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>QRCodeService</servlet-name>
		<url-pattern>/wx/qrcode</url-pattern>
	</servlet-mapping>
</web-app>